<h1 class="title"><u>Longest word game:</u></h1>
<div class="words">
  <% @letters.each do |letter| %>
  <div class="blocks">
    <h3><%= letter.capitalize %></h3>
  </div>
  <% end %>
</div>

<h4>What is the longest word you can find?</h4>
<form action="/score" method="post" data-turbo="false" class="form form-inline">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input class="form-control" type="input" id="input-field" name="word">
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
